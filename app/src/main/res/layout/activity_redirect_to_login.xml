<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/AccountCreatedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You have successfully created an account"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="219dp" />

    <TextView
        android:id="@+id/AccountCreatedText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Click on LOGIN to go back to login menu"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="315dp" />

    <Button
        android:id="@+id/RedirectToLoginBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="redirectBtnClick"
        android:text="login"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="527dp" />

</androidx.constraintlayout.widget.ConstraintLayout>