<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/WelcomeText"
        android:layout_width="328dp"
        android:layout_height="68dp"
        android:gravity="center"
        android:text="Welcome! You can select one of the function below"
        android:textSize="25dp"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="84dp" />

    <Button
        android:id="@+id/EditDone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="startmeasurement"
        android:text="Start Measurement"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="274dp" />

    <Button
        android:id="@+id/Delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="withdrawdata"
        android:text="Withdraw Data"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="341dp" />

    <Button
        android:id="@+id/Return"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="comparedata"
        android:text="Compare Data"
        tools:layout_editor_absoluteX="-27dp"
        tools:layout_editor_absoluteY="414dp" />

</androidx.constraintlayout.widget.ConstraintLayout>